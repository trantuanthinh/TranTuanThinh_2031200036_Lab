<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
    <style>
        body,
        html {
            height: 100%;
            margin: 0;
        }

        .admin-layout {
            display: grid;
            grid-template-areas:
                "logo header"
                "menu content"
                "footer footer";
            grid-template-columns: 200px 1fr;
            grid-template-rows: 60px 1fr 50px;
            height: 100vh;
        }

        .header {
            grid-area: header;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1rem;
            border-bottom: 1px solid #ddd;
        }

        .logo {
            grid-area: logo;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
            border-bottom: 1px solid #ddd;
        }

        .menu {
            grid-area: menu;
            background-color: #e9ecef;
            padding: 1rem;
            border-right: 1px solid #ccc;
        }

        .content {
            grid-area: content;
            padding: 2rem;
            background-color: #f1f3f5;
        }

        .footer {
            grid-area: footer;
            background-color: #f8f9fa;
            text-align: center;
            line-height: 50px;
            border-top: 1px solid #ddd;
        }

        .nav-link {
            display: block;
            margin-bottom: 10px;
            color: #000;
        }

        .nav-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="admin-layout">
        <div class="logo">LOGO</div>

        <div class="header">
            <div>Header</div>
            <div>
                <!-- Icons / User Dropdowns -->
                <span class="me-3">üîç</span>
                <span class="me-3">üîî</span>
                <span>üë§</span>
            </div>
        </div>

        <div class="menu">
            <a href="@Url.Action("Index", "Admin")" class="nav-link">Dashboard</a>
            <a href="@Url.Action("Books", "Admin")" class="nav-link">Manage Books</a>
            <a href="@Url.Action("Users", "Admin")" class="nav-link">Manage Users</a>
        </div>

        <div class="content">
            @RenderBody()
        </div>

        <div class="footer">
            &copy; @DateTime.Now.Year - Admin Panel
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>

</html>
