@model Book

@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="/avatar17.jpg" class="img-fluid" alt="@Model.Title" style="height: 300px; object-fit: cover;" />
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p><strong>Author:</strong> @Model.Author?.FirstName @Model.Author?.LastName</p>
            <p><strong>Category:</strong> @Model.Category?.Name</p>
            <p><strong>Description:</strong></p>
            <p>@Model.Description</p>
            <a asp-controller="Book" asp-action="ViewAsPdf" asp-route-id="@Model.Id" target="_blank">Đọc Sách Online</a>
        </div>
    </div>
</div>
